html, body, .app
  height 100%
  
body
  font 9px 
  padding 5px
  background-color #E0E0E0  
  overflow hidden
  height 89%
  
.app
  min-height 100%
  margin-bottom -30px
  
.app:after
  content ""
  display block

.wrapper
  min-height 100%
  margin-bottom -30px
  height auto
  height 100%

.form
  border: 1px solid #d0d2d5;
  margin-bottom 10px
  display block
  height 100%
  overflow auto
  overflow-x hidden
  padding 10px
  
.headlong
  padding 1px 2px 2px
    
.fldname 
  padding 6px 4px 2px
  text-align right 
  font 12px Arial
  width 180px
  float left
  
.postlab
  padding 1px 2px 2px
  text-align left 
  font-size 0.7em
  font-family arial

.field
  padding 1px 2px
 
.title
  font-size 1.2em
  font-family Arial
  font-weight bold
  border-bottom 1px solid #bebfc2;
  padding-bottom 3px
  display block

.controls
  border-bottom 1px solid #bebfc2;
  margin-bottom 3px  
  display block
  padding-bottom 3px
  padding-top 3px
  
.head2
  margin-top 14px
  font-size 0.9em
  font-family Arial
  font-weight bold
  display block
  
.head3
  margin-top 10px
  font-size 0.8em
  font-family Arial
  font-weight bold
  display block
  
.labels
  font-size 0.8em
  font-family Arial
  font-weight bold
  text-align right
  float left
  width 150px
  padding 4px
   
.inp 
  font-family Consolas
  display inline-block

  
  
select  
  font-family Consolas
  editable: true
  display inline-block

.textarea
  width 400px
  height 100px
  font-family Consolas
  display inline-block
  
.radio 
  text-align left
  font 12px Arial
  display inline-block

textarea:enabled, input:enabled
  background-color white
  border 1px solid grey

textarea:disabled
  background-color silver
  border 1px solid grey
  
input:disabled
  background-color silver
  border 1px solid grey

select:enabled
  background-color white
  border 1px solid grey  
  
select:disabled
  background-color silver
  border 1px solid grey


  
.enabled
  background-color white
  color black
  

.key
  border 1px solid  #FF9999
  
.noKey
  background-color white
    
.content 
  padding-bottom 3em

.footer 
 clear both
 position relative
 z-index 10
 height 3em
 margin-top -3em

.delete
  background-color red  

.h1
  font 72px
  weight bold
  font-family Arial
  margin 4px
  border 2px  
  
.subHead
  font-size 16px
  font-weight bold
  font-family Arial
  margin 4px
  border 2px  

@font-face
  font-family arista
  src url(fonts/arista/Arista.ttf)
 
.ingeo
  font-family arista
ul
  list-style-type none
  padding 0
  margin 0

